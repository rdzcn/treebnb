<% trees.each do |tree| %>
  <div class="index-search-result">
      <% if tree.photos.first %>
      <div class="result-image" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%= cl_image_path tree.photos.first.path, width: 300, height: 200, crop: :fit %>');">
      </div>
      <% end %>
      <div class="result-title">
        <p><%= link_to "#{tree.address}", tree_path(tree) %></p>
      </div>
      <div class="result-description">
        <p><%= tree.description %></p>
      </div>
      <div class="result-avatar">
        <img src="http://i.pravatar.cc/75?u=<%= rand(20..500) %>" alt="">
        <%#= cl_image_tag current_user.avatar, width: 100, height: 100, radius: :max %>
      </div>
      <div class="result-price">
        <p>total price <%= tree.price_per_night %>ê” </p>
      </div>
      <div class="result-review">
        <p> <% a=rand()+(6..9).to_a.sample %>
          <%= a.round(1) %> *
        </p>
      </div>
    </div>
    <% end %>