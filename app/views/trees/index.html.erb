<div class="container">
	<div class="row">
		<% @trees.each do |tree| %>
		<div class="col-xs-4">
			<div class="cards">
				<div class="card-image">
					<% if tree.photos.first %>
					<%= cl_image_tag tree.photos.first.path, { size: '300x300', crop: :fill } %>
					<% end %>
				</div>
				<div class="card-footer">
					<%= link_to tree.location, tree_path(tree) %>
					<%= tree.price_per_night %>
					<i class="fa fa-heart"></i>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>

<%= link_to '+Add a new tree', new_tree_path %>
