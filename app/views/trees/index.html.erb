<% content = open("https://api.darksky.net/forecast/fa5d94b5a83673b3ee1d802e80dfc7ee/#{@trees.last.latitude},#{@trees.last.longitude}?exclude=[currently,minutely,hourly,alerts,flags]&units=si").read %>
<% results = JSON.parse(content) %>

<% results["daily"]["data"].each do |item| %>
<div class="wrapper-weather">
  <p><%= Time.at(item["time"]).day %> February</p>
  <p><%= item["summary"] %></p>
  <p><%= item["temperatureHigh"] %>°C / <%= item["temperatureLow"] %>°C</p>
</div>
<% end %>

<div class="homepage-form">
  <form action="/trees">
    <i class="fa fa-search"></i>
    <div class="search-box">
      <label for="search"></label>
      <input type="text" id="search" placeholder="Enter your dream city" name="search">
    </div>
    <div class="search-button">
      <input type="submit" value="Search">
    </div>
  </form>
</div>

<div class="wrapper-index">
  <div class="index-search">
    <% @trees.each do |tree| %>
    <div class="index-search-result">
      <% if tree.photos.first %>
      <div class="result-image" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%= cl_image_path tree.photos.first.path, width: 300, height: 200, crop: :fit %>');">
      </div>
      <% end %>
      <div class="result-title">
        <p><%= link_to "Title comes here", tree_path(tree) %></p>
      </div>
      <div class="result-description">
        <p><%= tree.description %></p>
      </div>
      <div class="result-avatar">
        <img src="http://i.pravatar.cc/75" alt="">
        <%#= cl_image_tag current_user.avatar, width: 100, height: 100, radius: :max %>
      </div>
      <div class="result-price">
        <p><%= tree.price_per_night %>ꔠ</p>
      </div>
      <div class="result-review">
        <p>9.2</p>
      </div>
    </div>
    <% end %>
  </div>

  <div id="map" style="width: 550px; height: 700px; data-markers="<%= @markers.to_json %>">
  </div>


</div>


<button class="index-button">
  <%= link_to 'Add your tree', new_tree_path %>
</button>
